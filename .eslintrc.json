{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["react-app", "prettier"],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 120,
                "semi": true,
                "jsxSingleQuote": true,
                "singleQuote": true,
                "tabWidth": 4,
                "useTabs": false,
                "trailingComma": "all",
                "bracketSpacing": true,
                "jsxBracketSameLine": false,
                "arrowParens": "avoid",
                "htmlWhitespaceSensitivity": "ignore",
                "quoteProps": "preserve"
            }
        ]
    }
}
